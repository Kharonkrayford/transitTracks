    <script>
var map;
var marker;
var latLng = {lat: 34.73172, lng: -86.58979};
function initMap() {
  map = new google.maps.Map(document.getElementById('transitMap'), {
    center: latLng,
    zoom: 16
  });
  marker = new google.maps.Marker({
  	position: latLng,
  	map: map,
  	title: 'Huntsville Trolley'
  });
}
	</script>
